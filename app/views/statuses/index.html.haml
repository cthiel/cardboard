%table
  %tr
    %th Code
    %th Name
    %th Color
    %th
  - @statuses.each do |status|
    %tr
      %td= status.code
      %td= status.name
      %td{:style => "background-color:#{status.color}"}= status.color
      %td
        = link_to 'Show', status
        | #{link_to 'Edit', edit_status_path(status)} | #{link_to 'Destroy', status, :confirm => 'Are you sure?', :method => :delete}
.actions
  = link_to 'New Status', new_status_path
