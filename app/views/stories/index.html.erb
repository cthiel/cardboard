<table>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Status</th>
    <th></th>
  </tr>

<% @stories.each do |story| %>
  <tr>
    <td><%= story.number %></td>
    <td><%= story.name %></td>
    <td><%= story.status.name %></td>
    <td><%= link_to 'Show', story %> | <%= link_to 'Edit', edit_story_path(story) %> | <%= link_to 'Destroy', story, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

